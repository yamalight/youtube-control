{
  "manifest_version": 2,

  "name": "Mission Control for Youtube",
  "description": "Simple lists of videos for your Youtube subscriptions (like Video Deck)",
  "version": "1.0.1",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Mission Control for Youtube"
  },
  "permissions": ["storage", "https://*.youtube.com/*"],
  "content_security_policy": "script-src 'self' https://s.ytimg.com https://*.youtube.com; object-src 'self'"
}
